<Ui xmlns="http://www.blizzard.com/wow/ui/" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://www.blizzard.com/wow/ui/
..\FrameXML\UI.xsd">
    <Frame name="BC_DialogHeaderTemplate" mixin="DialogHeaderMixin" virtual="true"> 
		<!-- Overrides the default DialogHeaderTemplate to fix missing atlases-->
		<Size x="200" y="39"/>
		<KeyValues>
			<!-- Override this to change how much padding is on the left & right of the text. Padding is applied evenly on the left and right (headerTextPadding / 2) on each side -->
			<KeyValue key="headerTextPadding" value="64" type="number"/>

			<!--Optional: Add this to inheriting frames in order to auotmatically set the text when the header loads-->
			<!--<KeyValue key="textString" value="MAINMENU_BUTTON" type="global"/>-->
		</KeyValues>
		<Anchors>
			<Anchor point="TOP" y="11" />
		</Anchors>
		<Layers>
			<Layer level="ARTWORK">
				<Texture parentKey="LeftBG" file="Interface\Addons\ClassicCalendar\Textures\UIFrameDiamondMetalHeader2x" texelSnappingBias="0.0" snapToPixelGrid="false">
					<Size x="32" y="39"/>
					<Anchors>
						<Anchor point="LEFT"/>
					</Anchors>
                    <TexCoords left="0.0078125" right="0.5078125" top="0.31640625" bottom="0.62109375"/>
				</Texture>
				<Texture parentKey="RightBG" file="Interface\Addons\ClassicCalendar\Textures\UIFrameDiamondMetalHeader2x" texelSnappingBias="0.0" snapToPixelGrid="false">
					<Size x="32" y="39"/>
					<Anchors>
						<Anchor point="RIGHT"/>
					</Anchors>
                    <TexCoords left="0.0078125" right="0.5078125" top="0.62890625" bottom="0.93359375"/>
				</Texture>
				<Texture parentKey="CenterBG" file="Interface\Addons\ClassicCalendar\Textures\UIFrameDiamondMetalHeader2x" texelSnappingBias="0.0" snapToPixelGrid="false">
                    <Size x="128" y="39"/>
                    <Anchors>
						<Anchor point="TOPLEFT" relativeKey="$parent.LeftBG" relativePoint="TOPRIGHT"/>
						<Anchor point="BOTTOMRIGHT" relativeKey="$parent.RightBG" relativePoint="BOTTOMLEFT"/>
					</Anchors>
                    <TexCoords left="0.0" right="0.5" top="0.00390625" bottom="0.30859375"/>
				</Texture>
				<FontString parentKey="Text" inherits="GameFontNormal">
					<Anchors>
						<Anchor point="TOP" y="-13"/>
					</Anchors>
				</FontString>
			</Layer>
		</Layers>
		<Scripts>
			<OnLoad method="OnLoad"/>
		</Scripts>
	</Frame>
    <Frame name="BlizzCalendarTODFrame" parent="GameTimeFrame">
		<!-- Turns the time-of-day indicator into a button that opens the calendar -->
		<Size>
			<AbsDimension x="50" y="50"/>
		</Size>
		<Anchors>
			<Anchor point="CENTER"/>
		</Anchors>
		<Frames>
			<Button name="BlizzCalendarButton">
				<Size>
					<AbsDimension x="50" y="50"/>
				</Size>
				<Anchors>
					<Anchor point="CENTER"/>
				</Anchors>
				<HitRectInsets>
					<AbsInset left="6" right="0" top="5" bottom="10"/>
				</HitRectInsets>
				<Scripts>
					<OnLoad>
						self:SetFrameLevel(self:GetFrameLevel() + 3);
					</OnLoad>
					<OnClick>
						Calendar_Toggle();
					</OnClick>
				</Scripts>
				<NormalTexture file="Interface\Addons\ClassicCalendar\Textures\CalendarButton-Icon">
					<TexCoords left="0" right="0.78125" top="0" bottom="0.78125"/>
				</NormalTexture>
				<PushedTexture file="Interface\Addons\ClassicCalendar\Textures\CalendarButton-PressedIcon">
					<TexCoords left="0" right="0.78125" top="0" bottom="0.78125"/>
				</PushedTexture>
				<HighlightTexture alphaMode="ADD" file="Interface\Addons\ClassicCalendar\Textures\CalendarButton-Hilight">
					<TexCoords left="0" right="0.78125" top="0" bottom="0.78125"/>
				</HighlightTexture>
			</Button>
		</Frames>
	</Frame>
</Ui>